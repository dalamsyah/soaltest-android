<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="header" type="com.dimasalamsyah.soaltest.TransaksiHeaderModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@{`Nomor Transaksi: `+header.nomortransaksi}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{`Jenis Transaksi: `+header.jenistransaksi}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{`Tanggal Transaksi: `+header.createdAt}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="10dp"
            android:text="Tap untuk melihat detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>